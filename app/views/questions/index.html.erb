<h1>FRIDGE OVERFLOW</h1><hr>
<%= link_to 'Ask Question', new_question_path %><hr>

<table id='question_index'>
  <thead>
    <th class='short-column'>Votes</th>
    <th class='short-column'>Answers</th>
    <th class='short-column'>Views</th>
    <th class='long-column'><%= link_to "Highest-Voted" %> --- <%= link_to "Most Recent" %> --- <%= link_to "Trending" %></th>
  </thead>
  <tbody>
    <% @questions.each do |question|%>
      <tr>
        <td class='center'><%= question.votes.count %></td>
        <td class='center'><%= question.answers.count %></td>
        <td class='center'><%= question.visit_count %></td>
        <td class='big'><%= link_to question.title, question %><p>Submitted by <%= link_to question.user.username, user_path(question.user) %> on <%= question.created_at_formatted %></td>
      </tr>
    <% end %>
  </tbody>
</table>

