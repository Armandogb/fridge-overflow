<% if flash[:notice] %>
  <div class='flash'>
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<div class='user-form'>
  <%= form_tag do %>
    <%= label_tag :email %>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %>
    <%= text_field_tag :password %><br>
    <%= submit_tag 'Login' %>
  <% end %>
</div>
